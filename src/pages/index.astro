---
import Navbar from "../components/Navbar.astro";

// Server Only
const name = 'Current Time';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<Navbar />
		<h1>{name}</h1>
		<p>Momento actual: {new Date().toLocaleTimeString()}</p>
		<p class='js-localtime'>Hora actual real:</p>
	</body>
	<footer>
		Año: 2023
	</footer>
	<script>
		const currentYear: number = new Date().getFullYear();
		const footer = document.querySelector('footer') as HTMLElement;
		footer.innerText = `Año: ${currentYear}`;

		const currentTime: string = new Date().toLocaleTimeString();
		const paragraph = document.querySelector('.js-localtime') as HTMLParagraphElement;
		paragraph.innerText = `Hora actual real: ${currentTime}`

	</script>
</html>
